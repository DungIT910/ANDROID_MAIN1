<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dong_layout"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_thuTask"
            android:layout_width="65dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="SAT"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_thangTask"
            android:layout_width="65dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="MAY"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="@+id/tv_thuTask"
            app:layout_constraintTop_toBottomOf="@+id/tv_ngayTask" />

        <TextView
            android:id="@+id/tv_ngayTask"
            android:layout_width="65dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="06"
            android:textColor="#039BE5"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="@+id/tv_thuTask"
            app:layout_constraintTop_toBottomOf="@+id/tv_thuTask" />

        <TextView
            android:id="@+id/tv_tenTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginTop="24dp"
            android:text="Tên công việc"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_loaiTask"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="loại công việc"
            app:layout_constraintStart_toStartOf="@+id/tv_tenTask"
            app:layout_constraintTop_toBottomOf="@+id/tv_tenTask" />

        <TextView
            android:id="@+id/tv_gioTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="00:00"
            app:layout_constraintStart_toStartOf="@+id/tv_loaiTask"
            app:layout_constraintTop_toBottomOf="@+id/tv_loaiTask" />

        <Button
            android:id="@+id/btn_tuyChonTask"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="42dp"
            android:background="@drawable/three_dot_button"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>